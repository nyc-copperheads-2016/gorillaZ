<div class="col-12 center">
  <h3>Login</h3>
  <form action = "/sessions" method = "POST">
    <p>username: <input type="text" name="username"/> </p>
    <p>password: <input type="text" name="password"/></p>
    <p><input type="submit" value="submit"/></p>
  </form>
  <% if defined?(errors) %>
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
